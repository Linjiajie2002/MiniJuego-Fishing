		  <sentences>
			  <sentence text="bararsaerar"/>
		  </sentences>
		  <repeat_sentences>
			  <sentence text="Se me ha acabado el repertorio de chistes, vuelve en otro momento..."/>
		  </repeat_sentences>
	  </dialogTrigger>

  </scene>

	<dialogmanager>
		<textures>
			<background_dialog texturepath="Assets/Textures/background_textbox.png"/>
		</textures>
	</dialogmanager>
	
	<Animations>
